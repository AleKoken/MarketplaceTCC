@model IEnumerable<MarketplaceTCC.Models.Pedidos>

@{
    ViewBag.Title = "Index";
}

<h2>Meus Pedidos</h2>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusPedido.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataPedido)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusPedido.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPedido)
            </td>
            <td>
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.PedidosId }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }

</table>

