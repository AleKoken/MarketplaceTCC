@model IEnumerable<MarketplaceTCC.Models.Produtos>

@{
    ViewBag.Title = "Produtos";
}

<h2>Catálogo de Produtos</h2>
<br />
<div class="col-md-4">
    <p><a class="btn btn-info" href="http://localhost:58443/ItensPedido/Carrinho">Carrinho &raquo;</a></p>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendedor.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estoque)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendedor.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.Imagem))
            {
                <img src="@Url.Content(item.Imagem)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estoque)
        </td>
        <td>
            @Html.ActionLink("Comprar", "AddProduto", "ItensPedido", new { id = item.ProdutosId }, new { @class = "btn btn-warning" })
        </td>
    </tr>
}

</table>
